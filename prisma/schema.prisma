generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Vidhansabha {
  id       Int          @id @default(autoincrement())
  nameHi   String       @map("name_hi")
  nameEn   String       @map("name_en")
  citizens CitizenApp[]

  @@map("vidhansabhas")
}

model WorkType {
  id       Int          @id @default(autoincrement())
  nameHi   String       @map("name_hi")
  nameEn   String?      @map("name_en")
  citizens CitizenApp[]

  @@map("work_types")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  password      String
  name          String
  role          Role         @default(STAFF)
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")
  submittedApps CitizenApp[]

  @@map("users")
}

model CitizenApp {
  id            Int           @id @default(autoincrement())
  cNumber       String        @unique @map("c_number")
  name          String
  fatherName    String        @map("father_name")
  address       String
  mobile        String
  vidhansabhaId Int           @map("vidhansabha_id")
  type          ApplicantType
  post          String?
  workTypeId    Int           @map("work_type_id")
  description   String?
  fileUrl       String?       @map("file_url")
  status        AppStatus     @default(PENDING)
  submittedById String?       @map("submitted_by_id")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  activityLogs  ActivityLog[]
  submittedBy   User?         @relation(fields: [submittedById], references: [id])
  vidhansabha   Vidhansabha   @relation(fields: [vidhansabhaId], references: [id])
  workType      WorkType      @relation(fields: [workTypeId], references: [id])
  documents     Document[]

  @@map("citizen_apps")
}

model Document {
  id           Int        @id @default(autoincrement())
  citizenAppId Int        @map("citizen_app_id")
  filename     String
  originalName String     @map("original_name")
  mimeType     String     @map("mime_type")
  size         Int
  url          String
  type         DocType
  createdAt    DateTime   @default(now()) @map("created_at")
  citizenApp   CitizenApp @relation(fields: [citizenAppId], references: [id], onDelete: Cascade)

  @@map("documents")
}

model ActivityLog {
  id           Int        @id @default(autoincrement())
  citizenAppId Int        @map("citizen_app_id")
  action       String
  note         String?
  performedBy  String?    @map("performed_by")
  createdAt    DateTime   @default(now()) @map("created_at")
  citizenApp   CitizenApp @relation(fields: [citizenAppId], references: [id], onDelete: Cascade)

  @@map("activity_logs")
}

model PressRelease {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  titleHi     String    @map("title_hi")
  titleEn     String?   @map("title_en")
  contentHi   String    @map("content_hi")
  contentEn   String?   @map("content_en")
  pdfUrl      String?   @map("pdf_url")
  date        DateTime  @default(now())
  published   Boolean   @default(false)
  publishedAt DateTime? @map("published_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("press_releases")
}

model BlogPost {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  titleHi     String    @map("title_hi")
  titleEn     String?   @map("title_en")
  contentHi   String    @map("content_hi")
  contentEn   String?   @map("content_en")
  imageUrl    String?   @map("image_url")
  author      String    @default("Admin")
  published   Boolean   @default(false)
  publishedAt DateTime? @map("published_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("blog_posts")
}

model TimelineEvent {
  id       Int     @id @default(autoincrement())
  year     Int
  titleHi  String  @map("title_hi")
  titleEn  String? @map("title_en")
  descHi   String  @map("desc_hi")
  descEn   String? @map("desc_en")
  imageUrl String? @map("image_url")

  @@map("timeline_events")
}

model Page {
  id          Int           @id @default(autoincrement())
  slug        String        @unique
  titleHi     String        @map("title_hi")
  titleEn     String?       @map("title_en")
  isPublished Boolean       @default(false) @map("is_published")
  seoTitle    String?       @map("seo_title")
  seoDesc     String?       @map("seo_desc")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  typography  Json?         @map("typography")
  template    String?       @map("template")
  sections    PageSection[]

  @@map("pages")
}

model PageSection {
  id        Int         @id @default(autoincrement())
  pageId    Int         @map("page_id")
  type      SectionType
  order     Int         @default(0)
  content   Json
  isVisible Boolean     @default(true) @map("is_visible")
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")
  page      Page        @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@map("page_sections")
}

model SiteSetting {
  id        Int          @id @default(autoincrement())
  key       String       @unique
  value     String
  type      SettingType  @default(TEXT)
  group     SettingGroup @default(GENERAL)
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  @@map("site_settings")
}

model Event {
  id            Int      @id @default(autoincrement())
  titleHi       String   @map("title_hi")
  titleEn       String?  @map("title_en")
  descriptionHi String?  @map("description_hi")
  descriptionEn String?  @map("description_en")
  locationHi    String?  @map("location_hi")
  locationEn    String?  @map("location_en")
  date          DateTime
  category      String
  images        String[]
  isUpcoming    Boolean  @default(true) @map("is_upcoming")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("events")
}

model Menu {
  id        Int          @id @default(autoincrement())
  labelHi   String       @map("label_hi")
  labelEn   String?      @map("label_en")
  url       String
  order     Int          @default(0)
  parentId  Int?         @map("parent_id")
  position  MenuPosition @default(HEADER)
  isVisible Boolean      @default(true) @map("is_visible")
  parent    Menu?        @relation("MenuHierarchy", fields: [parentId], references: [id])
  children  Menu[]       @relation("MenuHierarchy")

  @@map("menus")
}

model GalleryAlbum {
  id          Int            @id @default(autoincrement())
  titleHi     String         @map("title_hi")
  titleEn     String?        @map("title_en")
  coverImage  String?        @map("cover_image")
  description String?
  order       Int            @default(0)
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")
  photos      GalleryPhoto[]

  @@map("gallery_albums")
}

model GalleryPhoto {
  id        Int          @id @default(autoincrement())
  albumId   Int          @map("album_id")
  imageUrl  String       @map("image_url")
  captionHi String?      @map("caption_hi")
  captionEn String?      @map("caption_en")
  order     Int          @default(0)
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")
  album     GalleryAlbum @relation(fields: [albumId], references: [id], onDelete: Cascade)

  @@map("gallery_photos")
}

model Video {
  id           Int      @id @default(autoincrement())
  titleHi      String   @map("title_hi")
  titleEn      String?  @map("title_en")
  videoUrl     String   @map("video_url")
  thumbnailUrl String?  @map("thumbnail_url")
  isFeatured   Boolean  @default(false) @map("is_featured")
  order        Int      @default(0)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("videos")
}

model Testimonial {
  id        Int     @id @default(autoincrement())
  name      String
  role      String?
  messageHi String  @map("message_hi")
  messageEn String? @map("message_en")
  imageUrl  String? @map("image_url")
  isVisible Boolean @default(true) @map("is_visible")
  order     Int     @default(0)

  @@map("testimonials")
}

model MovementBatch {
  id          Int      @id @default(autoincrement())
  batchNumber Int      @unique @map("batch_number")
  yearRange   String?  @map("year_range")
  startSerial Int      @map("start_serial")
  endSerial   Int      @map("end_serial")
  filePath    String   @map("file_path")
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("movement_batches")
}

model ContactQuery {
  id        Int         @id @default(autoincrement())
  name      String
  email     String?
  mobile    String?
  subject   String?
  message   String
  status    QueryStatus @default(NEW)
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")

  @@map("contact_queries")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  STAFF
}

enum DocType {
  PDF
  IMAGE
}

enum ApplicantType {
  CITIZEN
  PUBLIC_REP
}

enum AppStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  REJECTED
}

enum SectionType {
  HERO
  RICHTEXT
  TIMELINE
  GALLERY
  VIDEOS
  CONTACT_FORM
  FEATURES
  TESTIMONIALS
  FAQ
  BIOGRAPHY
  STATS
  NEWSLETTER
}

enum SettingType {
  TEXT
  RICHTEXT
  IMAGE
  BOOLEAN
}

enum SettingGroup {
  GENERAL
  HERO
  CONTACT
  SOCIAL
  SEO
  FEATURES
}

enum MenuPosition {
  HEADER
  FOOTER
  SIDEBAR
}

enum QueryStatus {
  NEW
  READ
  RESPONDED
  SPAM
}
