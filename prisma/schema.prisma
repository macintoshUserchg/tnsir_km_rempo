// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// === MASTER DATA ===
model Vidhansabha {
  id       Int          @id @default(autoincrement())
  nameHi   String       @map("name_hi")
  nameEn   String       @map("name_en")
  citizens CitizenApp[]

  @@map("vidhansabhas")
}

model WorkType {
  id       Int          @id @default(autoincrement())
  nameHi   String       @map("name_hi")
  nameEn   String?      @map("name_en")
  citizens CitizenApp[]

  @@map("work_types")
}

// === AUTHENTICATION ===
model User {
  id            String       @id @default(cuid())
  email         String       @unique
  password      String
  name          String
  role          Role         @default(STAFF)
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")
  submittedApps CitizenApp[]

  @@map("users")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  STAFF
}

// === APPLICATION MANAGEMENT ===
model CitizenApp {
  id            Int           @id @default(autoincrement())
  cNumber       String        @unique @map("c_number")
  
  // Applicant Info
  name          String
  fatherName    String        @map("father_name")
  address       String
  mobile        String
  
  // Location
  vidhansabhaId Int           @map("vidhansabha_id")
  vidhansabha   Vidhansabha   @relation(fields: [vidhansabhaId], references: [id])
  
  // Application Details
  type          ApplicantType
  post          String?       // Only for PUBLIC_REP
  workTypeId    Int           @map("work_type_id")
  workType      WorkType      @relation(fields: [workTypeId], references: [id])
  description   String?       @db.Text
  fileUrl       String?       @map("file_url")
  
  // Status
  status        AppStatus     @default(PENDING)
  
  // Admin who submitted (for admin-only workflow)
  submittedById String?       @map("submitted_by_id")
  submittedBy   User?         @relation(fields: [submittedById], references: [id])
  
  // Timestamps
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  
  // Relations
  activityLogs  ActivityLog[]
  documents     Document[]

  @@map("citizen_apps")
}

model Document {
  id           Int        @id @default(autoincrement())
  citizenAppId Int        @map("citizen_app_id")
  citizenApp   CitizenApp @relation(fields: [citizenAppId], references: [id], onDelete: Cascade)
  filename     String     // stored filename
  originalName String     @map("original_name")
  mimeType     String     @map("mime_type")
  size         Int        // bytes
  url          String     // public URL
  type         DocType    // PDF or IMAGE
  createdAt    DateTime   @default(now()) @map("created_at")

  @@map("documents")
}

enum DocType {
  PDF
  IMAGE
}

enum ApplicantType {
  CITIZEN
  PUBLIC_REP
}

enum AppStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  REJECTED
}

model ActivityLog {
  id           Int        @id @default(autoincrement())
  citizenAppId Int        @map("citizen_app_id")
  citizenApp   CitizenApp @relation(fields: [citizenAppId], references: [id], onDelete: Cascade)
  action       String
  note         String?    @db.Text
  performedBy  String?    @map("performed_by")
  createdAt    DateTime   @default(now()) @map("created_at")

  @@map("activity_logs")
}

// === CMS: EXISTING ===
model PressRelease {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  titleHi   String   @map("title_hi")
  titleEn   String?  @map("title_en")
  contentHi String   @map("content_hi") @db.Text
  contentEn String?  @map("content_en") @db.Text
  pdfUrl    String?  @map("pdf_url")
  date        DateTime        @default(now())
  published   Boolean         @default(false)
  publishedAt DateTime?       @map("published_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("press_releases")
}

model BlogPost {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  titleHi     String    @map("title_hi")
  titleEn     String?   @map("title_en")
  contentHi   String    @map("content_hi") @db.Text
  contentEn   String?   @map("content_en") @db.Text
  imageUrl    String?   @map("image_url")
  author      String    @default("Admin")
  published   Boolean   @default(false)
  publishedAt DateTime? @map("published_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("blog_posts")
}

model TimelineEvent {
  id       Int     @id @default(autoincrement())
  year     Int
  titleHi  String  @map("title_hi")
  titleEn  String? @map("title_en")
  descHi   String  @map("desc_hi") @db.Text
  descEn   String? @map("desc_en") @db.Text
  imageUrl String? @map("image_url")

  @@map("timeline_events")
}

// === CMS: DYNAMIC PAGE BUILDER ===

model Page {
  id          Int           @id @default(autoincrement())
  slug        String        @unique
  titleHi     String        @map("title_hi")
  titleEn     String?       @map("title_en")
  isPublished Boolean       @default(false) @map("is_published")
  seoTitle    String?       @map("seo_title")
  seoDesc     String?       @map("seo_desc")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  typography  Json?         @map("typography")
  template    String?       @map("template")

  sections    PageSection[]

  @@map("pages")
}

model PageSection {
  id          Int      @id @default(autoincrement())
  pageId      Int      @map("page_id")
  page        Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  type        SectionType
  order       Int      @default(0)
  content     Json     // Stores type-specific data (e.g. { "title": "...", "items": [...] })
  isVisible   Boolean  @default(true) @map("is_visible")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("page_sections")
}

enum SectionType {
  HERO
  RICHTEXT
  TIMELINE
  GALLERY
  VIDEOS
  CONTACT_FORM
  FEATURES
  TESTIMONIALS
  FAQ
  BIOGRAPHY
  STATS
  NEWSLETTER
}

// === CMS: GLOBAL SETTINGS ===

model SiteSetting {
  id        Int      @id @default(autoincrement())
  key       String   @unique // e.g., "hero_title", "contact_email"
  value     String   @db.Text
  type      SettingType @default(TEXT)
  group     SettingGroup @default(GENERAL)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("site_settings")
}

enum SettingType {
  TEXT
  RICHTEXT
  IMAGE
  BOOLEAN
}

enum SettingGroup {
  GENERAL
  HERO
  CONTACT
  SOCIAL
  SEO
  FEATURES    // Feature toggle settings
}

// === CMS: EVENTS ===

model Event {
  id            Int      @id @default(autoincrement())
  titleHi       String   @map("title_hi")
  titleEn       String?  @map("title_en")
  descriptionHi String?  @map("description_hi") @db.Text
  descriptionEn String?  @map("description_en") @db.Text
  locationHi    String?  @map("location_hi")
  locationEn    String?  @map("location_en")
  date          DateTime
  category      String   // e.g. "public-meeting", "inauguration"
  images        String[] // Array of image URLs
  isUpcoming    Boolean  @default(true) @map("is_upcoming")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("events")
}

// === CMS: NAVIGATION ===

model Menu {
  id        Int      @id @default(autoincrement())
  labelHi   String   @map("label_hi")
  labelEn   String?  @map("label_en")
  url       String
  order     Int      @default(0)
  parentId  Int?     @map("parent_id")
  parent    Menu?    @relation("MenuHierarchy", fields: [parentId], references: [id])
  children  Menu[]   @relation("MenuHierarchy")
  position  MenuPosition @default(HEADER)
  isVisible Boolean  @default(true) @map("is_visible")

  @@map("menus")
}

enum MenuPosition {
  HEADER
  FOOTER
  SIDEBAR
}

// === CMS: CONTENT RESOURCES ===

model GalleryAlbum {
  id          Int      @id @default(autoincrement())
  titleHi     String   @map("title_hi")
  titleEn     String?  @map("title_en")
  coverImage  String?  @map("cover_image")
  description String?  @db.Text
  order       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  photos      GalleryPhoto[]

  @@map("gallery_albums")
}

model GalleryPhoto {
  id        Int      @id @default(autoincrement())
  albumId   Int      @map("album_id")
  album     GalleryAlbum @relation(fields: [albumId], references: [id], onDelete: Cascade)
  imageUrl  String   @map("image_url")
  captionHi String?  @map("caption_hi")
  captionEn String?  @map("caption_en")
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("gallery_photos")
}

model Video {
  id          Int      @id @default(autoincrement())
  titleHi     String   @map("title_hi")
  titleEn     String?  @map("title_en")
  videoUrl    String   @map("video_url") // YouTube/Vimeo link
  thumbnailUrl String? @map("thumbnail_url")
  isFeatured  Boolean  @default(false) @map("is_featured")
  order       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("videos")
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  role      String?
  messageHi String   @map("message_hi") @db.Text
  messageEn String?  @map("message_en") @db.Text
  imageUrl  String?  @map("image_url")
  isVisible Boolean  @default(true) @map("is_visible")
  order     Int      @default(0)

  @@map("testimonials")
}

model ContactQuery {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?
  mobile    String?
  subject   String?
  message   String   @db.Text
  status    QueryStatus @default(NEW)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("contact_queries")
}

enum QueryStatus {
  NEW
  READ
  RESPONDED
  SPAM
}
